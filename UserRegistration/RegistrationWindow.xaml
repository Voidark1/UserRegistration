<Window x:Class="UserRegistration.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserRegistration"
        mc:Ignorable="d"
        Title="Регистрация пользователя" MinHeight="300" MaxHeight="300" MinWidth="500" MaxWidth="500">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5" MinWidth="400" HorizontalAlignment="Center" >Имя(Никнейм)</TextBlock>
            <TextBox Margin="5" MinWidth="400" HorizontalAlignment="Center" Name="RegUsername"></TextBox>
            <TextBlock Margin="5" MinWidth="400" HorizontalAlignment="Center" >Логин</TextBlock>
            <TextBox Margin="5" MinWidth="400" HorizontalAlignment="Center" Name="RegLogin"></TextBox>
            <TextBlock Margin="5" MinWidth="400" HorizontalAlignment="Center">Пароль</TextBlock>
            <TextBox Margin="5" MinWidth="400" HorizontalAlignment="Center" Name="RegPassword"></TextBox>

            <Button Margin="5"
                    Name="RegUser"
                    MinWidth="80"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Click="RegUser_Click">Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Window>
